  button1.tick();
  button2.tick();
  totalModes = 3;

  if (mode == 0) {
    middleText(F("DIY Mode"));
    diy();

  } else if (mode == 1) {
    middleText(F("Fade"));
    colourFade.run();

  } else if (mode == 2) {
    off();

